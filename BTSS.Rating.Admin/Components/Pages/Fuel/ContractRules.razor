@page "/fuel/contract-rules"
@using Microsoft.EntityFrameworkCore
@using BTSS.Rating.Infrastructure.Persistence
@using BTSS.Rating.Infrastructure.Persistence.Entities
@using BTSS.Rating.Persistence
@inject RatingDbContext Db
@inject DialogService DialogService
@inject NotificationService NotificationService

<h3>Contract Fuel Rules</h3>

<RadzenCard>
  <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" class="rz-mb-2">
    <RadzenDropDown TValue="long?" Data="@contractVersions" TextProperty="Label" ValueProperty="ContractVersionId"
                    @bind-Value="selectedContractVersionId" Placeholder="Select Contract Version" Style="min-width: 340px"
                    Change="@OnVersionChange" />
    <RadzenButton Icon="add_circle_outline" Text="Add" Disabled="@(selectedContractVersionId is null)" Click="@AddRow" />
  </RadzenStack>

  <RadzenDataGrid @ref="grid" Data="@rows" TItem="ContractFuelRule"
                  AllowFiltering="true" AllowSorting="true" AllowPaging="true" PageSize="15"
                  EditMode="DataGridEditMode.Single"
                  RowUpdate="@OnUpdate" RowCreate="@OnCreate">
    <Columns>
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="ContractFuelRuleId" Title="Id" Width="90px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="ContractVersionId" Title="ContractVersionId" Width="140px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="FuelScheduleId" Title="FuelScheduleId" Width="130px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="ApplyTo" Title="ApplyTo" Width="110px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="CalcMethod" Title="CalcMethod" Width="130px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="EffectiveDate" Title="Effective" Width="120px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="ExpirationDate" Title="Expires" Width="120px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Property="FormulaExpression" Title="Formula" Width="220px" />
      <RadzenDataGridColumn TItem="ContractFuelRule" Context="r" Title="Actions" Width="170px" Filterable="false" Sortable="false">
        <Template Context="r">
          <RadzenButton Icon="edit" Size="ButtonSize.Small" Click="@(() => grid!.EditRow(r))" class="rz-mr-1" />
          <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Small" Click="@(() => DeleteRow(r))" />
        </Template>
        <EditTemplate Context="r">
          <RadzenButton Icon="save" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Primary" Click="@(() => grid!.UpdateRow(r))" class="rz-mr-1" />
          <RadzenButton Icon="cancel" Size="ButtonSize.Small" Click="@(() => grid!.CancelEditRow(r))" />
        </EditTemplate>
      </RadzenDataGridColumn>
    </Columns>
  </RadzenDataGrid>
</RadzenCard>

@code {
  private RadzenDataGrid<ContractFuelRule>? grid;

  private long? selectedContractVersionId;
  private List<ContractFuelRule> rows = new();

  private List<ContractVersionPick> contractVersions = new();

  protected override async Task OnInitializedAsync()
  {
    contractVersions = await Db.ContractVersions.AsNoTracking()
      .OrderByDescending(v => v.ContractVersionId)
      .Select(v => new ContractVersionPick(v.ContractVersionId, $"{v.ContractId} - v{v.VersionNo} ({v.PublishStatus}) {v.EffectiveStart}..{v.EffectiveEnd}"))
      .ToListAsync();
  }

  private async Task OnVersionChange(object _)
  {
    await LoadRows();
  }

  private async Task LoadRows()
  {
    if (selectedContractVersionId is null) { rows = new(); return; }

    rows = await Db.ContractFuelRules.AsNoTracking()
      .Where(x => x.ContractVersionId == selectedContractVersionId.Value)
      .OrderByDescending(x => x.ContractFuelRuleId)
      .ToListAsync();
  }

  private async Task AddRow()
  {
    if (selectedContractVersionId is null) return;

    var r = new ContractFuelRule
    {
      ContractVersionId = selectedContractVersionId.Value,
      FuelScheduleId = 1,
      ApplyTo = "TOTAL",
      CalcMethod = "PERCENT",
      EffectiveDate = DateOnly.FromDateTime(DateTime.UtcNow.Date),
      ExpirationDate = DateOnly.FromDateTime(DateTime.UtcNow.Date.AddYears(1))
    };

    rows.Insert(0, r);
    await grid!.InsertRow(r);
  }

  private async Task OnCreate(ContractFuelRule r)
  {
    Db.ContractFuelRules.Add(r);
    await Db.SaveChangesAsync();
    await LoadRows();
    await grid!.Reload();
    Notify("Created.");
  }

  private async Task OnUpdate(ContractFuelRule r)
  {
    Db.ContractFuelRules.Update(r);
    await Db.SaveChangesAsync();
    await LoadRows();
    await grid!.Reload();
    Notify("Saved.");
  }

  private async Task DeleteRow(ContractFuelRule r)
  {
    var ok = await DialogService.Confirm("Delete this rule?", "Confirm", new ConfirmOptions(){ OkButtonText="Delete", CancelButtonText="Cancel" });
    if (ok != true) return;

    Db.ContractFuelRules.Remove(r);
    await Db.SaveChangesAsync();
    await LoadRows();
    await grid!.Reload();
    Notify("Deleted.", NotificationSeverity.Warning);
  }

  private void Notify(string message, NotificationSeverity severity = NotificationSeverity.Info)
    => NotificationService.Notify(new NotificationMessage{ Severity=severity, Summary=message, Duration=3000 });

  private sealed record ContractVersionPick(long ContractVersionId, string Label);
}
